#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int rows, cols;
    
    printf("Введіть кількість рядків: ");
    scanf("%d", &rows);
    
    printf("Введіть кількість стовпців: ");
    scanf("%d", &cols);
    
    int matrix[rows][cols];
    int min_elements[rows];
    
    srand(time(NULL));
    
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            matrix[i][j] = rand() % 201 - 100;
        }
    }
    
    for (int i = 0; i < rows; i++) {
        int min_element = matrix[i][0];
        for (int j = 1; j < cols; j++) {
            if (matrix[i][j] < min_element) {
                min_element = matrix[i][j];
            }
        }
        min_elements[i] = min_element;
    }
    
    printf("Матриця:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            printf("%d\t", matrix[i][j]);
        }
        printf("\n");
    }
    
    printf("Мінімальні елементи в кожному рядку:\n");
    for (int i = 0; i < rows; i++) {
        printf("%d ", min_elements[i]);
    }
    
    return 0;
}
